<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransactionFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_244"
        android:background="@drawable/background_card_top"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/transaction_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/title_transaction"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_backward">
        
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/foto"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/Entradas"
        android:layout_width="71dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_151"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_75"
        android:text="Entradas"
        android:textSize="13sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/valor_entradas"
        android:layout_width="97dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/Entradas"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_75"
        android:text="R$ 45,35"
        android:textSize="24sp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Entradas"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_45"
        android:src="@drawable/ic_arrow_down_24px"/>

    <TextView
        android:id="@+id/Saídas"
        android:layout_width="71dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_151"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_255"
        android:text="Saídas"
        android:textSize="13sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/valor_saidas"
        android:layout_width="97dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/Entradas"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_255"
        android:text="R$ 536"
        android:textSize="24sp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Entradas"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_223"
        android:src="@drawable/ic_arrow_up_24px"/>

    <TextView
        android:id="@+id/title_data"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_244"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_begin_16"
        android:layout_marginTop="31dp"
        android:text="@string/title_data"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_data"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_151"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="151dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_244"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="244dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_begin_16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_begin_45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="45dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_begin_75"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="75dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_begin_223"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="223dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_begin_255"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="255dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_end_16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>