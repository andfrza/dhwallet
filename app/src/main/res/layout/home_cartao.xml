            android:text="****"/>
        <TextView
            android:id="@+id/numero_cartao_texto_3"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="90dp"
            android:text="****"/>
