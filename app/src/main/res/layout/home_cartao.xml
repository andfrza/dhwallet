        <TextView
            android:id="@+id/nome_texto"
            android:layout_width="25dp"
            android:layout_height="8dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="141dp"
            android:textSize="7sp"
            android:text="Nome"/>
