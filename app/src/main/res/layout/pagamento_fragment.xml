<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransferenceFragment">

    <View
        android:id="@+id/background_header"
        android:background="@drawable/background_card_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guide_header"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/pagamento_title"
        app:navigationIcon="@drawable/ic_arrow_backward"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            android:src="@drawable/foto"
            android:layout_marginEnd="16dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            tools:ignore = "ContentDescription"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchview"
        style="@style/Widget.DHWallet.SearchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:defaultQueryHint="@string/search_hint"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toBottomOf="@id/guide_header"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <ImageButton
        android:id="@+id/pagamento_botao_electricity"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/guide_header"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        android:background="@drawable/background_button_electricity"
        android:src="@drawable/ic_electricity"/>
    <TextView
        android:id="@+id/pagamento_texto_electricity"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/pagamento_botao_electricity"
        app:layout_constraintEnd_toEndOf="@id/pagamento_botao_electricity"
        app:layout_constraintTop_toBottomOf="@id/pagamento_botao_electricity"
        android:text="Luz"/>
    <ImageButton
        android:id="@+id/pagamento_botao_tap"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="33dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/guide_header"
        app:layout_constraintStart_toEndOf="@id/pagamento_botao_electricity"
        android:background="@drawable/background_button_tap"
        android:src="@drawable/ic_tap"/>
    <TextView
        android:id="@+id/pagamento_texto_tap"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/pagamento_botao_tap"
        app:layout_constraintEnd_toEndOf="@id/pagamento_botao_tap"
        app:layout_constraintTop_toBottomOf="@id/pagamento_botao_tap"
        android:text="Ãgua"/>
    <ImageButton
        android:id="@+id/pagamento_botao_internet"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="33dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/guide_header"
        app:layout_constraintStart_toEndOf="@id/pagamento_botao_tap"
        android:background="@drawable/background_button_internet"
        android:src="@drawable/ic_internet"/>
    <TextView
        android:id="@+id/pagamento_texto_internet"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/pagamento_botao_internet"
        app:layout_constraintEnd_toEndOf="@id/pagamento_botao_internet"
        app:layout_constraintTop_toBottomOf="@id/pagamento_botao_internet"
        android:text="Internet"/>
    <ImageButton
        android:id="@+id/pagamento_botao_money"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="33dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/guide_header"
        app:layout_constraintStart_toEndOf="@id/pagamento_botao_internet"
        android:background="@drawable/background_button_money"
        android:src="@drawable/ic_money"/>
    <TextView
        android:id="@+id/pagamento_texto_money"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="@id/pagamento_botao_money"
        app:layout_constraintEnd_toEndOf="@id/pagamento_botao_money"
        app:layout_constraintTop_toBottomOf="@id/pagamento_botao_money"
        android:text="Pagamento"/>

    <TextView
        android:id="@+id/title_contact"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pagamento_texto_electricity"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        android:layout_marginTop="31dp"
        android:text="Mais usados"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pagamento_recycler"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_contact"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="20"
        tools:listitem="@layout/item_contact"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="223dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

